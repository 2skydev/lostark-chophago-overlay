{
  "appId": "com.2skydev.chophago-overlay",
  "productName": "chophago overlay",
  "protocols": {
    "name": "chophago-overlay",
    "schemes": [
      "chophago-overlay"
    ]
  },
  "publish": [
    {
      "provider": "github",
      "owner": "2skydev",
      "repo": "lostark-chophago-overlay"
    }
  ],
  "asar": true,
  "win": {
    "target": "nsis",
    "icon": "resources/icons/logo@256.ico"
  },
  "mac": {
    "target": "dmg",
    "icon": "resources/icons/logo@512.png"
  },
  "nsis": {
    "oneClick": true,
    "artifactName": "${productName}-${version}.${ext}",
    "uninstallDisplayName": "${productName}"
  },
  "extraResources": [
    "./resources/**"
  ],
  "directories": {
    "output": "release/"
  },
  "files": [
    "out/**/*"
  ]
}